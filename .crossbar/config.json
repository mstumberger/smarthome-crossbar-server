{
    "version": 2,
    "workers": [
        {
            "type": "router",
            "options": {
                "pythonpath": [
                    ".."
                ]
            },
            "realms": [
                {
                    "name": "realm1",
                    "roles": [
                        {
                            "name": "anonymous",
                            "permissions": [
                                {
                                    "uri": "*",
                                    "allow": {
                                        "call": true,
                                        "register": true,
                                        "publish": true,
                                        "subscribe": true
                                    },
                                    "disclose": {
                                        "caller": true,
                                        "publisher": true
                                    },
                                    "cache": true
                                }
                            ]
                        }
                    ]
                }
            ],
            "transports": [
                {
                    "type": "web",
                    "endpoint": {
                        "type": "tcp",
                        "port": 8080
                    },
                    "paths": {
                        "/": {
                             "type": "wsgi",
                             "module": "flask_app",
                             "object": "app"
                              },
                        "ws": {
                            "type": "websocket",
                            "options": {
                                "enable_webstatus": false,
                                "max_frame_size": 1048576,
                                "max_message_size": 1048576,
                                "auto_fragment_size": 65536,
                                "fail_by_drop": true,
                                "open_handshake_timeout": 2500,
                                "close_handshake_timeout": 1000,
                                "auto_ping_interval": 4000,
                                "auto_ping_timeout": 8000,
                                "auto_ping_size": 4
                                }
                        },
                        "call": {
                            "type": "caller",
                            "realm": "realm1",
                            "role": "anonymous",
                            "options": {
                                "debug": true
                            }
                        },
                        "callsigned": {
                            "type": "caller",
                            "realm": "realm1",
                            "role": "anonymous",
                            "options": {
                                "key": "foobar",
                                "secret": "secret",
                                "post_body_limit": 8192,
                                "timestamp_delta_limit": 10,
                                "require_ip": [
                                    "192.168.1.1/255.255.255.0",
                                    "127.0.0.1"
                                ],
                                "require_tls": false
                            }
                        }
                    }
                },
                {
                    "type": "mqtt",
                    "endpoint": {
                        "type": "tcp",
                        "port": 1883
                    },
                    "options": {
                        "realm": "realm1",
                        "role": "anonymous",
                        "payload_mapping": {
                            "": {
                                "type": "passthrough"
                            }
                        }
                    }
                }
            ],
            "components": [
                {
                    "type": "class",
                    "classname": "backend.AppSession",
                    "realm": "realm1",
                    "role": "anonymous"
                }
            ]
        }
    ]
}